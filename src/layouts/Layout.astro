---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
  image?: string
}

const {
  title,
  description = "Free tool to convert LLM markdown output into professionally styled PDF and DOCX documents. Works with ChatGPT, Claude, and any AI assistant.",
  image = "/og-image.svg"
} = Astro.props

const siteUrl = "https://prettify-ai.com"
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content="prettify-ai, markdown to pdf, markdown to docx, LLM output converter, AI markdown formatter, ChatGPT to PDF, Claude to PDF, AI resume formatter, markdown converter" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}${image}`} />
    <meta property="og:site_name" content="Prettify AI" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}${image}`} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Organization",
            "name": "Prettify AI",
            "url": "https://prettify-ai.com",
            "logo": "https://prettify-ai.com/favicon.svg",
            "sameAs": [
              "https://github.com/dkeesey/prettify-ai"
            ],
            "description": "Free tool to convert LLM markdown output into professionally styled PDF and DOCX documents"
          },
          {
            "@type": "SoftwareApplication",
            "name": "Prettify AI",
            "applicationCategory": "UtilityApplication",
            "operatingSystem": "Web Browser",
            "offers": {
              "@type": "Offer",
              "price": "0",
              "priceCurrency": "USD"
            },
            "description": "Free tool to convert LLM markdown output into professionally styled PDF and DOCX documents. Works with ChatGPT, Claude, and any AI assistant.",
            "url": "https://prettify-ai.com",
            "screenshot": "https://prettify-ai.com/og-image.svg",
            "featureList": [
              "Convert markdown to PDF",
              "Convert markdown to DOCX",
              "AI-powered document formatting",
              "Resume formatting and optimization",
              "Works with ChatGPT, Claude, and any LLM",
              "No signup required",
              "100% free and open source"
            ],
            "aggregateRating": {
              "@type": "AggregateRating",
              "ratingValue": "5",
              "ratingCount": "1"
            }
          },
          {
            "@type": "WebSite",
            "name": "Prettify AI",
            "url": "https://prettify-ai.com",
            "description": "Convert LLM markdown output to professional DOCX and PDF documents",
            "potentialAction": {
              "@type": "SearchAction",
              "target": "https://prettify-ai.com/editor?q={search_term_string}",
              "query-input": "required name=search_term_string"
            }
          }
        ]
      }
    </script>

    <!-- Analytics handled by Cloudflare Zaraz -->
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <slot />
  </body>
</html>
