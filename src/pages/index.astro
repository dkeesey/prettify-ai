---
import Layout from '../layouts/Layout.astro'
import { getFeatureFlags } from '../lib/features'

const flags = getFeatureFlags()
const showCoach = flags.enableCoach
const showEditor = flags.enableEditor
const mode = flags.mode

// Redirect only for single-feature modes (not 'landing' or 'full')
if (mode === 'editor-only') {
  return Astro.redirect('/editor')
}
if (mode === 'coach-only') {
  return Astro.redirect('/coach')
}
// 'landing' and 'full' modes show this page
---

<Layout title="Prettify AI - Convert LLM Markdown to Professional Documents">
  <div class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="border-b bg-white">
      <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="text-xl font-bold text-primary">prettify-ai.com</div>
        <div class="flex items-center gap-3">
          {showCoach && <a href="/coach" class="text-sm text-gray-600 hover:text-primary">AI Coach</a>}
          {showEditor && <a href="/editor" class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium bg-primary text-primary-foreground hover:bg-primary/90 h-9 px-4">
            Open Editor
          </a>}
        </div>
      </div>
    </header>

    <!-- Hero -->
    <main class="flex-1 bg-gradient-to-b from-white to-gray-50">
      <div class="container mx-auto px-4 py-16 text-center max-w-4xl">

        <!-- Main headline -->
        <h1 class="text-4xl md:text-5xl font-bold tracking-tight text-gray-900 mb-4">
          Turn LLM Markdown Into<br/>
          <span class="text-primary">Professional Documents</span>
        </h1>
        <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
          Paste markdown from ChatGPT, Claude, or any AI. Style it. Export to PDF or Word.
        </p>

        <!-- Single CTA -->
        <div class="my-12">
          <a href="/editor" class="inline-flex items-center justify-center rounded-md font-medium bg-primary text-primary-foreground hover:bg-primary/90 h-14 px-10 text-lg">
            Open Editor
          </a>
          <p class="text-sm text-gray-500 mt-4">Free. No signup. No payment.</p>
        </div>

        <!-- Use cases -->
        <div class="mt-16 pt-12 border-t">
          <h2 class="text-2xl font-bold mb-8">Works Great For</h2>
          <div class="grid md:grid-cols-4 gap-6 text-left max-w-4xl mx-auto">
            <div class="bg-white p-5 rounded-lg border">
              <div class="text-2xl mb-2">üìÑ</div>
              <h3 class="font-semibold mb-1">Resumes</h3>
              <p class="text-gray-600 text-sm">ATS-friendly DOCX or styled PDF</p>
            </div>
            <div class="bg-white p-5 rounded-lg border">
              <div class="text-2xl mb-2">‚úâÔ∏è</div>
              <h3 class="font-semibold mb-1">Cover Letters</h3>
              <p class="text-gray-600 text-sm">Professional formatting in seconds</p>
            </div>
            <div class="bg-white p-5 rounded-lg border">
              <div class="text-2xl mb-2">üìù</div>
              <h3 class="font-semibold mb-1">Reports</h3>
              <p class="text-gray-600 text-sm">Clean headers, lists, sections</p>
            </div>
            <div class="bg-white p-5 rounded-lg border">
              <div class="text-2xl mb-2">üìã</div>
              <h3 class="font-semibold mb-1">Any Document</h3>
              <p class="text-gray-600 text-sm">If it's markdown, we can style it</p>
            </div>
          </div>
        </div>

        <!-- How it works -->
        <div class="mt-16 pt-12 border-t">
          <h2 class="text-2xl font-bold mb-8">How It Works</h2>
          <div class="grid md:grid-cols-3 gap-8 text-left max-w-3xl mx-auto">
            <div>
              <div class="text-4xl font-bold text-primary/20 mb-2">1</div>
              <h3 class="font-semibold mb-2">Paste Markdown</h3>
              <p class="text-gray-600 text-sm">Copy output from ChatGPT, Claude, or any LLM. Paste it in. We detect and convert markdown automatically.</p>
            </div>
            <div>
              <div class="text-4xl font-bold text-primary/20 mb-2">2</div>
              <h3 class="font-semibold mb-2">Choose a Theme</h3>
              <p class="text-gray-600 text-sm">Professional, Modern, Classic, or ATS-friendly. Serif or sans-serif. Preview your changes live.</p>
            </div>
            <div>
              <div class="text-4xl font-bold text-primary/20 mb-2">3</div>
              <h3 class="font-semibold mb-2">Export</h3>
              <p class="text-gray-600 text-sm">Download as PDF for sharing or DOCX for editing. Typography is consistent across formats.</p>
            </div>
          </div>
        </div>

        <!-- Bookmarklet -->
        <div class="mt-16 pt-8 border-t">
          <h2 class="text-xl font-semibold mb-4">Power User Tip</h2>
          <p class="text-gray-600 mb-4">Drag this to your bookmark bar. Select text in ChatGPT, click it, and it opens here ready to format.</p>
          <a
            href="javascript:(function(){var s=window.getSelection().toString();if(!s){alert('Select some text first!');return;}window.open('https://prettify-ai.com/editor?content='+btoa(unescape(encodeURIComponent(s))),'_blank');})();"
            class="inline-flex items-center gap-2 px-4 py-2 bg-gray-100 rounded border-2 border-dashed border-gray-300 hover:border-primary hover:bg-gray-50 cursor-move"
            onclick="event.preventDefault();alert('Drag this to your bookmark bar!');"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path></svg>
            Prettify It
          </a>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="border-t bg-white py-6">
      <div class="container mx-auto px-4 text-center text-sm text-gray-500">
        <p>A simple utility for people who use AI. <a href="https://github.com/dkeesey/prettify-ai" class="underline hover:text-primary">Open source</a>.</p>
      </div>
    </footer>
  </div>
</Layout>
